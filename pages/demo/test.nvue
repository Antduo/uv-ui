<template>
	<view class="">
		<uv-modal ref="modal" :show="show" content="模态框内容" @confirm="confirm" :asyncClose="true"></uv-modal>
		<button @click="showModal">弹起Modal</button>
	</view>
</template>
<script>
	export default {
		data() {
			return {
				show: false
			}
		},
		methods: {
			showModal() {
				this.show = true;
			},
			confirm() {
				setTimeout(() => {
					// 3秒后自动关闭
					// this.show = false;
					this.$refs.modal.closeLoading()
				}, 3000)
			}
		}
	}
</script>